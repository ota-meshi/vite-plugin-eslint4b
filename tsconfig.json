{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "lib": ["es2022"],
    "module": "ES2022",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "tsup.config.ts"]
}
